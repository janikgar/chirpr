<h2>What's Trending</h2>
<div class="col-xs-6 col-md-6">
	<div class="panel panel-info">
		<div class="panel-heading">
			<h3>Top Hashtags</h3>
		</div>
		<div class="panel-body">
			<div class="list-group">
				<% @top_hashtags.each do |hashtag| %>
					<% choptag = hashtag[0][1..-1] %>
					<%= link_to chirp_tags_path( phrase: choptag ), class: "list-group-item" do %>
					<%= hashtag[0] %>
					<span class="badge"><%= hashtag[1] %></span>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>
<div class="col-xs-6 col-md-6">
	<div class="panel panel-info">
		<div class="panel-heading">
			<h3>Top Chirpr</h3>
		</div>
		<div class="panel-body">
			<%= render 'user_badge', user: @top_chirpr %>
		</div>
	</div>
</div>