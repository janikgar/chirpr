<%= form_for @chirp do |f| %>
	<div class="form-group">
	    <%= f.label :message %>
	    <%= f.text_area :message, placeholder: "What do you want to Chirp?", class: "form-control" %>
	</div>

	<div class="form-group">
	<%= f.hidden_field :user_id, value: current_user.id %>
	</div>

	<div class="actions">
	<%= form.submit "Save Changes", class: "btn btn-primary" %>
	</div>
<% end %>