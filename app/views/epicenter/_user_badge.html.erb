<div class="text-center">
  <div class="row">
    <div class="col-xs-6 col-lg-5">
      <%= render 'layouts/show_avatar', user: user %>
    </div>
    <div class="col-xs-6 col-lg-7">
      <%= link_to show_user_path(username: user.username) do %>
        <h3><%= user.name %></h3>
        <p>@<%= user.username %></p>
      <% end %>
      <p><%= user.bio %></p>
      <p>
        <% if current_user.following.include?(user.id) %>
          <%= link_to "Following", unfollow_path(id: user.id), class: "btn btn-primary", id: "unfollow_btn" %>
        <% else %>
          <% if current_user.id != user.id %>
            <%= link_to "Follow", now_following_path(id: user.id), class: "btn btn-primary" %>
          <% else %>
            <%= link_to "This is You!", '#', class: "btn btn-default btn-disabled", disabled: "disabled" %>
          <% end %>
        <% end %>
      </p>
    </div>
  </div>
</div>