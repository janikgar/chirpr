<div style="transform: translateY(-35px);">
<div class="chirp"><%= icon('fas', 'crow') %></div>
<h2>Log in to</h2> <h1 class="brand">Chirpr</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.text_field :login, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Username or Email" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary form-control"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</hdiv
